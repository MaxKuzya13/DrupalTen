{% set bem_block = 'klog-blog-related-posts' %}

{% if items|length %}

  <div {{ attributes.addClass(bem_block) }}>
    <h3 class="{{ bem_block }}__title"><span>Related posts</span></h3>

    <div class="{{ bem_block }}__items">
      {% for item in items %}
        <div class="{{ bem_block }}__item">
          {{ item }}
        </div>
      {% endfor %}
    </div>


  </div>
{% endif %}

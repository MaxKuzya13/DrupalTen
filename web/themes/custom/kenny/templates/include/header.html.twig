{% set bem_block = 'header' %}
{% set branding_config = {
  use_site_logo: false,
  use_site_slogan: false,
} %}
{% set show_klog_hero = show_klog_hero is defined ? show_klog_hero : true %}

<header class="{{ bem_block }}" role="banner">
  <div class="{{ bem_block }}__top">
    {{ drupal_block('system_branding_block', branding_config ) }}
    {{ drupal_block('system_menu_block:main') }}
  </div>

  {% if show_klog_hero %}
    {{ drupal_block('klog_hero') }}
  {% endif %}

</header>


{% set bem_block = 'contact-page' %}

<div class="{{ bem_block }}">
  <div class="{{ bem_block }}__inner">
    <div class="{{ bem_block }}__left">
      <h2 class="{{ bem_block }}__title">Contacts</h2>
      Let`s talk

      address, mail, phone.
      {{ klog_availability_status() }}

      <form action="/contact" method="post" enctype="multipart/form-data">
        <input type="hidden" name="form_id" value="contact_form">

        <div class="{{ bem_block }}__form-item">
          <label for="edit-name">Your name</label>
          <input type="text" id="edit-name" name="name" value="">
        </div>

        <div class="{{ bem_block }}__form-item">
          <label for="edit-email">Your email address</label>
          <input type="email" id="edit-email" name="email" value="">
        </div>

        <div class="{{ bem_block }}__form-item">
          <label for="edit-message">Your message</label>
          <textarea id="edit-message" name="message"></textarea>
        </div>

        <div class="{{ bem_block }}__form-actions">
          <input type="submit" name="submit" value="Send">
        </div>
      </form>
    </div>



    <div class="{{ bem_block }}__right">
      <video poster="{{ contact_image_uri|image_style('klog_hero') }}" autoplay loop muted class="{{ bem_block }}__contact-video">
        <source src="{{ file_url(contact_video_uri) }}" type="video/mp4">{{ 'Your browser does not support the video tag'|t }}
      </video>
    </div>
  </div>


</div>
